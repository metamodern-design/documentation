include /_mixin-card.pug
include /_mixin-tabpanel.pug


+tabpanel('1', routes[1].label)
  section
    div(class=`
      py-1b
      border-t-1
      border-b-1
      border-light
    `)
      != content.layoutToc
  
  section  
    .pb-2b.text-lg.leading-lg-narrow
      != content.layoutHeading1
      
    .flex.items-center.mb-half-b
      .w-1b.h-1b.bg-darker
      code.pl-1b.font-bold.text-sm= '1b → 17px'
        
    .flex.items-center.mb-one-and-half-b
      .w-1c.h-1b.bg-darker
      code.pl-1b.font-bold.text-sm= '1c → 68px'
    
    != content.layoutHeading2
        
    h2#base-units= 'Base Units'

    != content.layoutBaseUnits
  
    each i in ['quarter-', 'half-', 1, 'one-and-half-', 2, 'two-and-half-', 3, 4, 5, 6, 7, 8]
      .flex.items-center.mb-half-b
        .h-1b.bg-darker(class=`w-${i}b`)
        code.pl-1b.font-bold.text-sm= `${i}b`
        
    h2#column-units= 'Column Units'
    
    != content.layoutColumnUnits
    
    each i in [1, 2, 3]
      .flex.items-center.mb-half-b
        .h-1b.bg-darker(class=`w-${i}c`)
        code.pl-1b.font-bold.text-sm= `${i}c`
    
    each i in [4, 5, 6]
      div(class=`
        hidden c11_flex
        items-center
        mb-half-b
      `)
        .h-1b.bg-darker(class=`w-${i}c`)
        code.pl-1b.font-bold.text-sm= `${i}c`
        
    each i in [7, 8, 9]
      div(class=`
        hidden c17_flex
        items-center
        mb-half-b
      `)
        .h-1b.bg-darker(class=`w-${i}c`)
        code.pl-1b.font-bold.text-sm= `${i}c`
        
    p.font-semibold.italic= '... up to 15c'
        
    h2#relative-proportions= 'Relative Proportions'
    
    != content.layoutRelativeProportions
    
    each i in ['fifth', 'fourth', 'third', 'two-fifths', 'half', 'three-fifths', 'two-thirds', 'three-fourths', 'four-fifths', 'full']
      .flex.items-center.mb-half-b
        div(class=`
          w-2c c11_w-4c c17_w-6c 
          bg-darker
        `)
          .h-1b.bg-soft-red(class=`w-${i}`)
        code.pl-1b.font-bold.text-sm= i
      
  
    h2#responsive-design= 'Responsive Design'
    
    != content.layoutResponsiveDesign
    
    p: code.pl-1b.font-bold.text-sm= 'c11 → 748px (tablet and larger)'

    p: code.pl-1b.font-bold.text-sm= 'c17 → 1156px (laptop and larger)'
