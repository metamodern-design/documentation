include /_mixins/index.pug


+tabpanel('2', routes[2].label)
  section
    +toc()
      != content.typographyToc
  
  section  
    +lede()
    
    h2#size= 'Size'
    
    each i in ['xs', 'sm', 'base', 'lg', 'xl', '2xl', '3xl', '4xl', '5xl', '6xl']
      p(class=`text-${i}` style='line-height: 1')= `text-${i}`
    
    h2#leading= 'Leading'
    
    each rows, i in {xs: 3, sm: 4, base: 4, lg: 4, xl: 5}
      each j in ['', '-narrow', '-wide']
        +gridlines(rows)
          div(class=`
            absolute
            top-0
            bottom-0
            left-0
            right-0
            flex
            items-center
          `)
            div(class=`
              px-half-b mx-1b
              bg-light-yellow-orange
              text-${i}
              leading-${i}${j}
            `)= `leading-${i}${j}`
    
    h2#family= 'Family'
    
    h2#weight= 'Weight'
