include /_mixins/index.pug


+tabpanel('2', routes[2].label)
  section
    +toc()
      != content.typographyToc
  
  section  
    +lede()
    
    h2#size= 'Size'
    
    each i in ['xs', 'sm', 'base', 'lg', 'xl', '2xl', '3xl', '4xl', '5xl', '6xl']
      p(class=`text-${i}` style='line-height: 1')= `text-${i}`
    
    h2#leading= 'Leading'
    
    each rows, i in {xs: 3, sm: 4, base: 4, lg: 4, xl: 5}
      each j in ['', '-narrow', '-wide']
        +gridlines(rows)
          div(class=`
            px-half-b mx-1b
            bg-light-red-orange
            text-${i}
            leading-${i}${j}
          `)= `leading-${i}${j}`
    
    h2#family= 'Family'
    
    h3= 'Sans'
    
    ul.unstyled
      each url, name in fontFamilies.sans
        li
          +extLink(url)
            = `font-${name}`
    
    h3= 'Condensed'
    
    ul.unstyled
      each url, name in fontFamilies.condensed
        li
          +extLink(url)
            = `font-${name}`
        
    h3= 'Serif'
    
    ul.unstyled
      each url, name in fontFamilies.serif
        li
          +extLink(url)
            = `font-${name}`
    
    h3= 'Mono'
    
    ul.unstyled
      each url, name in fontFamilies.mono
        li
          +extLink(url)
            = `font-${name}`
      
    
    h2#weight= 'Weight'
    