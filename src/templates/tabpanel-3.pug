include /_mixins/index.pug


+tabpanel('3', routes[3].label)
  section.px-1b
    +toc()
      != content.colorPaletteToc
  
  section  
    +lede('mb-2b')
      != content.colorPaletteLede
    
    h2#hues= 'Hues'
    
    != content.colorPaletteHues
    
    each hue in colorPalette.hues
      +level('mb-half-b')
        div(class=`
          flex-shrink-0
          w-2b
          h-2b
          rounded
          bg-bright-${hue}
        `)
        +label(hue)
    
    h2#background-colors= 'Background Colors'
    
    != content.colorPaletteBgColors
    
    h3= 'gray'

    each shade in colorPalette.shades
      +level('my-1b')
        div(class=`
          flex-shrink-0
          w-2b
          h-2b
          rounded
          bg-${shade}
        `)
        +label(`bg-${shade}`)
    
    each hue in colorPalette.hues
      h3= hue
      
      each shade in colorPalette.shades
        +level('my-1b')
          div(class=`
            flex-shrink-0
            w-2b
            h-2b
            rounded
            bg-${shade}-${hue}
          `)
          +label(`bg-${shade}-${hue}`)
    
    h2#text-border-colors= 'Text & Border Colors'
    
    != content.colorPaletteTextColors
    
    h3= 'gray'

    each shade in colorPalette.shades
      +level('mb-half-b')
        div(class=`
          flex
          items-center
          justify-center
          flex-shrink-0
          w-2b
          h-2b
          rounded
          border-2
          border-${shade}
          text-${shade}
        `)
          .font-semibold= 'a'
        div(class=`
          flex
          flex-col
          justify-center
        `)
          +label(`text-${shade}`)
          +label(`border-${shade}`)
    
    each hue in colorPalette.hues
      h3= hue
      
      each shade in colorPalette.shades
        +level('mb-half-b')
          div(class=`
            flex
            items-center
            justify-center
            flex-shrink-0
            w-2b
            h-2b
            rounded
            border-2
            border-${shade}-${hue}
            text-${shade}-${hue}
          `)
            .font-semibold= 'a'
            
          +label(`text-${shade}-${hue}`)
          
    h2#customize= 'Customize Color Palette'
    
    != content.colorPaletteCustomize
